PORT=8080

# JWT
JWT_SECRET=REPLACE_WITH_SECURE_RANDOM_STRING
JWT_EXPIRATION=2h

# Firebase
FIREBASE_API_KEY=REPLACE_FIREBASE_API_KEY
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=REPLACE_MESSAGING_SENDER_ID
FIREBASE_APP_ID=REPLACE_FIREBASE_APP_ID
FIREBASE_MEASUREMENT_ID=REPLACE_MEASUREMENT_ID

# OAuth / Callback
CALLBACK_URL=http://localhost:8080/auth/google/callback
GOOGLE_CLIENT_ID=REPLACE_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=REPLACE_GOOGLE_CLIENT_SECRET

# Stripe
STRIPE_SECRET_KEY=sk_test_REPLACE
STRIPE_PUBLISHABLE_KEY=pk_test_REPLACE
STRIPE_WEBHOOK_SECRET=whsec_REPLACE

# Frontend
FRONTEND_URL=http://localhost:3000

# Notes:
# - Use a long random value for JWT_SECRET (32+ bytes).
# - Keep .env.local out of version control (add to .gitignore).